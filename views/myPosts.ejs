<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Posts | Postify</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" crossorigin="anonymous" />
</head>
<body class="bg-gray-900 text-white font-sans">
    <!-- Navbar -->
    <%- include('partials/navbar', { user: user }) %>

    <!-- My Posts Section -->
    <section class="flex flex-col items-center justify-center text-center py-20 px-6 bg-gradient-to-b from-gray-900 via-gray-800 to-gray-900">
        <div class="space-y-6 max-w-2xl w-full">
            <h1 class="text-4xl md:text-5xl font-extrabold leading-tight animate-fadeInUp">My <span class="text-blue-500">Posts</span></h1>

            <% if (posts.length === 0) { %>
                <div class="mt-10 p-6 bg-gray-800 rounded-lg shadow-lg animate-fadeInUp delay-200">
                    <p class="text-lg text-gray-300 mb-4">You haven't created any posts yet.</p>
                    <a href="/" class="inline-block bg-blue-600 hover:bg-blue-700 text-white font-medium px-5 py-2 rounded-lg transition duration-300">
                        Back to Home
                    </a>
                </div>
            <% } else { %>
                <div class="mt-10 text-gray-400">
                    <% posts.reverse().forEach(post => { %>
                        <div class="bg-gray-800 p-4 rounded-lg shadow mb-4 text-left">
                            <p>@<%= user.username %></p>
                            <h2 class="text-xl font-bold text-blue-400"><%= post.title %></h2>
                            <p class="text-gray-300"><%= post.content %></p>
                            <div class="flex justify-between items-center mt-4">
                                <div>
                                    <i class="fa-solid fa-heart" style="color: #ff0000;"></i>
                                    <span><%= post.likes.length %></span>
                                </div>
                                <div class="hover:bg-gray-700 p-2 rounded-lg flex items-center gap-2 hover:cursor-pointer">
                                    <span class="hover:cursor-pointer"><a href="/delete-my-post/<%= post._id %>">
                                                <i class="fa-solid fa-trash"></i>
                                            </a></i></span>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            <% } %>
        </div>
    </section>
</body>
</html>