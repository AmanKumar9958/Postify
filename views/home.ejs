<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home | Postify</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" crossorigin="anonymous" />
</head>
<body class="bg-gray-900 text-white font-sans">

    <!-- Navbar -->
    <%- include('partials/navbar', { user: user }) %>

    <!-- Hero Section -->
    <section class="flex items-center justify-center text-center py-20 px-6 bg-gradient-to-b from-gray-900 via-gray-800 to-gray-900">
        <div class="space-y-6 max-w-2xl">
        <h1 class="text-4xl md:text-5xl font-extrabold leading-tight animate-fadeInUp">Welcome to <span class="text-blue-500">Postify</span></h1>
        <p class="text-gray-300 text-lg md:text-xl animate-fadeInUp delay-100">Your platform for learning, sharing, and growing together.</p>
        <div class="flex justify-center gap-4 animate-fadeInUp delay-200">
            <button onclick="openModal()" class="text-white bg-blue-500 p-2 rounded-xl text-lg hover:scale-110 transition-all duration-200 hover:cursor-pointer">
                <i class="fa-solid fa-pen-to-square"></i> Create Post
            </button>
        </div>
        </div>
    </section>

    <!-- Animations -->
    <style>
        @keyframes fadeInUp {
        0% { opacity: 0; transform: translateY(20px); }
        100% { opacity: 1; transform: translateY(0); }
        }
        .animate-fadeInUp {
        animation: fadeInUp 0.8s ease-out forwards;
        }
        .delay-100 { animation-delay: 0.1s; }
        .delay-200 { animation-delay: 0.2s; }
    </style>
    <!-- Modal Background -->
    <div id="postModal" class="fixed inset-0 flex items-center justify-center backdrop-blur-sm bg-black/50 hidden z-50">
        <!-- Modal Box -->
        <div class="bg-white text-black rounded-xl shadow-xl p-6 w-[90%] max-w-md relative animate-fadeInUp">
            <!-- Close Button -->
            <button onclick="closeModal()" class="absolute top-2 right-3 text-black hover:text-red-500 text-2xl hover:cursor-pointer">&times;</button>
            <!-- Form Content -->
            <h2 class="text-2xl font-bold mb-4 text-blue-600">Create New Post</h2>
            <form action="/create-post" method="POST" class="space-y-4">
                <input type="text" name="title" placeholder="Post Title" class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500" required >
                <textarea name="content" rows="5" placeholder="Write your post..." class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500" required></textarea>
                <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">Submit Post</button>
            </form>
        </div>
    </div>
    <!-- Modal Scripts -->
    <script>
        function openModal() {
            document.getElementById("postModal").classList.remove("hidden");
            document.body.classList.add("overflow-hidden");
        }

        function closeModal() {
            document.getElementById("postModal").classList.add("hidden");
            document.body.classList.remove("overflow-hidden");
        }
    </script>
    <!-- Modal Animations -->
    <style>
        @keyframes fadeInUp {
            0% { opacity: 0; transform: translateY(20px); }
            100% { opacity: 1; transform: translateY(0); }
        }
        .animate-fadeInUp {
            animation: fadeInUp 0.5s ease-out forwards;
        }
    </style>
</body>
</html>
