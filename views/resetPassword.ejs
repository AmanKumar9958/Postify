<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <title>Reset Password | Postify</title>
    <link rel="icon" type="image/svg+xml" href="favicon.svg">
    <link rel="stylesheet" href="/css/app.css" />
</head>
<body class="bg-gray-800 text-white">
    <div class="w-full min-h-screen flex items-center justify-center flex-col gap-2" data-animate="slide-up">
        <form action="/reset-password/<%= token %>" method="POST" class="flex flex-col gap-4 w-96 p-6 bg-gray-900 rounded-xl shadow-lg border border-gray-700 transition-transform card-raise" data-animate="scale">
            <h1 class="text-2xl font-bold text-center">Reset Password</h1>
            <p class="text-center text-gray-300">Enter your new password below.</p>
            <label for="password" class="font-semibold">New Password:</label>
            <div class="relative">
                <input 
                    type="password" 
                    id="password" 
                    name="password" 
                    placeholder="Enter new password"
                    class="p-2 pr-10 rounded-md bg-gray-700 text-white focus:outline-none focus:ring-2 focus:ring-blue-500 transition-colors"
                    required
                    minlength="6"
                    oninvalid="this.setCustomValidity('Please enter a new password (min 6 characters).')"
                    oninput="this.setCustomValidity('')"
                >
                <button type="button" id="togglePasswordReset" aria-label="Show password" class="absolute inset-y-0 right-2 flex items-center text-gray-300 hover:text-white">
                    <svg class="eye h-5 w-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" d="M1.5 12s3.75-7.5 10.5-7.5S22.5 12 22.5 12 18.75 19.5 12 19.5 1.5 12 1.5 12z"></path><path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
                    <svg class="eye-off h-5 w-5 hidden" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" d="M3 3l18 18M10.584 10.59a3 3 0 104.827 3.41M9.88 4.84A10.451 10.451 0 0112 4.5c6.75 0 10.5 7.5 10.5 7.5a18.97 18.97 0 01-4.438 5.513M6.228 6.228A18.968 18.968 0 001.5 12s3.75 7.5 10.5 7.5a10.45 10.45 0 004.007-.773"></path></svg>
                </button>
            </div>
            <label for="confirmPassword" class="font-semibold">Confirm Password:</label>
            <div class="relative">
                <input 
                    type="password" 
                    id="confirmPassword" 
                    name="confirmPassword" 
                    placeholder="Confirm new password"
                    class="p-2 pr-10 rounded-md bg-gray-700 text-white focus:outline-none focus:ring-2 focus:ring-blue-500 transition-colors"
                    required
                    minlength="6"
                    oninvalid="this.setCustomValidity('Please confirm your new password.')"
                    oninput="this.setCustomValidity('')"
                >
                <button type="button" id="toggleConfirmPasswordReset" aria-label="Show password" class="absolute inset-y-0 right-2 flex items-center text-gray-300 hover:text-white">
                    <svg class="eye h-5 w-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" d="M1.5 12s3.75-7.5 10.5-7.5S22.5 12 22.5 12 18.75 19.5 12 19.5 1.5 12 1.5 12z"></path><path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
                    <svg class="eye-off h-5 w-5 hidden" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" d="M3 3l18 18M10.584 10.59a3 3 0 104.827 3.41M9.88 4.84A10.451 10.451 0 0112 4.5c6.75 0 10.5 7.5 10.5 7.5a18.97 18.97 0 01-4.438 5.513M6.228 6.228A18.968 18.968 0 001.5 12s3.75 7.5 10.5 7.5a10.45 10.45 0 004.007-.773"></path></svg>
                </button>
            </div>
            <button type="submit" class="p-2 bg-blue-600 rounded-md hover:bg-blue-700 transition-colors hover:cursor-pointer font-semibold btn-glow" data-ripple>
                Reset Password
            </button>
            <p class="text-center">
                <a href="/login" class="text-md underline font-bold text-white hover:text-blue-400 transition-colors">Back to Login</a>
            </p>
        </form>
    </div>
    <script>
        // Simple client-side password match validation
        document.querySelector('form').addEventListener('submit', function(e) {
            const pass = document.getElementById('password').value;
            const confirm = document.getElementById('confirmPassword').value;
            if (pass !== confirm) {
                e.preventDefault();
                alert('Passwords do not match!');
            }
        });
        // Visibility toggles
        function toggleVisibility(input, btn){
            const isHidden = input.type === 'password';
            input.type = isHidden ? 'text' : 'password';
            btn.setAttribute('aria-label', isHidden ? 'Hide password' : 'Show password');
            const eye = btn.querySelector('.eye');
            const eyeOff = btn.querySelector('.eye-off');
            if (eye && eyeOff) { eye.classList.toggle('hidden'); eyeOff.classList.toggle('hidden'); }
        }
        const toggleBtnReset = document.getElementById('togglePasswordReset');
        const toggleBtnConfirmReset = document.getElementById('toggleConfirmPasswordReset');
        const passwordInputReset = document.getElementById('password');
        const confirmInputReset = document.getElementById('confirmPassword');
        if (toggleBtnReset && passwordInputReset) {
            toggleBtnReset.addEventListener('click', () => toggleVisibility(passwordInputReset, toggleBtnReset));
        }
        if (toggleBtnConfirmReset && confirmInputReset) {
            toggleBtnConfirmReset.addEventListener('click', () => toggleVisibility(confirmInputReset, toggleBtnConfirmReset));
        }
    </script>
    <script src="/js/ui.js"></script>
</body>
</html>